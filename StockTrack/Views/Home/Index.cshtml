@model IEnumerable<StockTrack.ViewModels.ProductVM>
@{
    ViewData["Title"] = "StockTrack | Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="text-center">
    <h1>Welcome to StockTrack</h1>
    <p>Your app for tracking products, sales, and users</p>
</div>

<!-- Featured Products Section -->
<div class="container mt-4">
    <h2 class="mb-4">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">$@product.Price</p>
                        <a asp-controller="Product" asp-action="ViewProduct" asp-route-Id="@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>