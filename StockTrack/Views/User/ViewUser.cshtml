@model StockTrack.ViewModels.UserVM
@{
    ViewData["Title"] = "View User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<h1>@Model.UserName</h1>

<!-- User Details -->
<div class="form-group">
    <label asp-for="Id" class="control-label">User ID</label>
    <input class="form-control" asp-for="Id" disabled />
</div>
<div class="form-group">
    <label asp-for="UserName" class="control-label">Username</label>
    <input class="form-control" asp-for="UserName" disabled />
</div>
<div class="form-group">
    <label asp-for="Role" class="control-label">Role</label>
    <input class="form-control" asp-for="Role" disabled />
</div>

<!-- Actions -->
<a class="btn btn-outline-secondary" asp-action="Index">Back</a>
<a class="btn btn-outline-primary" asp-route-id="@Model.Id" asp-action="Edit">Edit</a>
<a class="btn btn-outline-danger" asp-route-id="@Model.Id" asp-action="Delete">Delete</a>