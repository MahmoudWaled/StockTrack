@model StockTrack.ViewModels.ProductVM
@{
    ViewData["Title"] = "View Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<h1>@Model.Name Product</h1>

<!-- Product Details -->
<div class="form-group">
    <label asp-for="Name" class="control-label">Product Name</label>
    <input class="form-control" asp-for="Name" disabled />
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label">Product Price</label>
    <input class="form-control" asp-for="Price" disabled />
</div>
<div class="form-group">
    <label asp-for="Quantity" class="control-label">Product Quantity</label>
    <input class="form-control" asp-for="Quantity" disabled />
</div>
<div class="form-group">
    <label asp-for="Category" class="control-label">Product Category</label>
    <input class="form-control" asp-for="Category" disabled />
</div>

<!-- Actions -->
<a class="btn btn-outline-secondary" asp-action="Index">Back</a>
<a class="btn btn-outline-primary" asp-route-id="@Model.Id" asp-action="Edit">Edit</a>
<a class="btn btn-outline-danger" asp-route-id="@Model.Id" asp-action="Delete">Delete</a>