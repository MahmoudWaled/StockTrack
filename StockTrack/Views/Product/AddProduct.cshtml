@model StockTrack.ViewModels.ProductVM
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<h1>Add Product</h1>

<!-- Form to add a new product -->
<form asp-action="AddProduct">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Product Name</label>
        <input class="form-control" asp-for="Name" type="text" placeholder="Enter product name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Product Price</label>
        <input class="form-control" asp-for="Price" type="number" placeholder="Enter price" min="0" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Product Quantity</label>
        <input class="form-control" asp-for="Quantity" type="number" placeholder="Enter quantity" min="0" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label">Product Category</label>
        <input class="form-control" asp-for="Category" type="text" placeholder="Enter category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Form Actions -->
    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
    <button class="btn btn-outline-primary" type="submit">Add</button>
</form>